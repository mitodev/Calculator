<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272727"
    android:rowCount="3"
    android:columnCount="1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:background="@color/white">

        <ImageView
            android:src="@drawable/lines"
            android:layout_marginVertical="35sp"
            android:layout_width="16sp"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="50sp"
                android:layout_marginRight="30sp"
                android:textColor="#272727"
                android:textSize="65sp" />

            <TextView
                android:id="@+id/tvExpression"
                android:textSize="25sp"
                android:layout_gravity="end"
                android:textColor="#00B1FF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="45sp" />

        </LinearLayout>


    </LinearLayout>

    <GridLayout
        android:layout_rowWeight="1"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_row="1"
        android:layout_rowSpan="2"
        android:layout_columnWeight="1"
        >

        <Button
            android:textSize="18sp"
            android:id="@+id/tvClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".20"
            android:layout_columnWeight=".25"
            android:background="#2B2B2B"
            android:backgroundTint="#2B2B2B"
            android:text="c"
            android:textAllCaps="false"
            android:textColor="#04A3EA"
            app:backgroundTint="#2B2B2B" />
        <Button
            android:textSize="18sp"
            android:id="@+id/tvDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".20"
            android:layout_columnWeight=".25"
            android:background="#2B2B2B"
            android:backgroundTint="#2B2B2B"
            android:text="รท"
            android:textAllCaps="false"
            android:textColor="#04A3EA"
            app:backgroundTint="#2B2B2B" />
        <Button
            android:textSize="18sp"
            android:id="@+id/tv100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".20"
            android:layout_columnWeight=".25"
            android:background="#2B2B2B"
            android:backgroundTint="#2B2B2B"
            android:text="%"
            android:textAllCaps="false"
            android:textColor="#04A3EA"
            app:backgroundTint="#2B2B2B" />
        <Button
            android:textSize="18sp"
            android:id="@+id/tvMul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".20"
            android:layout_columnWeight=".25"
            android:background="#2B2B2B"
            android:backgroundTint="#2B2B2B"
            android:text="x"
            android:textAllCaps="false"
            android:textColor="#04A3EA"
            app:backgroundTint="#2B2B2B" />


        <Button
            android:textSize="18sp"
            android:id="@+id/tvSeven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".20"
            android:layout_columnWeight=".25"
            android:background="#2B2B2B"
            android:text="7"
            android:textAllCaps="false"
            android:textColor="#04A3EA"
            app:backgroundTint="#272727" />
        <Button
            android:textSize="18sp"
            android:id="@+id/tvEight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".20"
            android:layout_columnWeight=".25"
            android:background="#2B2B2B"
            android:text="8"
            android:textAllCaps="false"
            android:textColor="#04A3EA"
            app:backgroundTint="#272727" />
        <Button
            android:textSize="18sp"
            android:id="@+id/tvNine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".20"
            android:layout_columnWeight=".25"
            android:background="#2B2B2B"
            android:text="9"
            android:textAllCaps="false"
            android:textColor="#04A3EA"
            app:backgroundTint="#272727" />
        <Button
            android:textSize="18sp"
            android:id="@+id/tvMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".20"
            android:layout_columnWeight=".25"
            android:background="#2B2B2B"
            android:backgroundTint="#2B2B2B"
            android:text="-"
            android:textAllCaps="false"
            android:textColor="#04A3EA"
            app:backgroundTint="#2B2B2B" />


        <Button
            android:textSize="18sp"
            android:id="@+id/tvFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".20"
            android:layout_columnWeight=".25"
            android:background="#2B2B2B"
            android:text="4"
            android:textAllCaps="false"
            android:textColor="#04A3EA"
            app:backgroundTint="#272727" />
        <Button
            android:textSize="18sp"
            android:id="@+id/tvFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".20"
            android:layout_columnWeight=".25"
            android:background="#2B2B2B"
            android:text="5"
            android:textAllCaps="false"
            android:textColor="#04A3EA"
            app:backgroundTint="#272727" />
        <Button
            android:textSize="18sp"
            android:id="@+id/tvSix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".20"
            android:layout_columnWeight=".25"
            android:background="#2B2B2B"
            android:text="6"
            android:textAllCaps="false"
            android:textColor="#04A3EA"
            app:backgroundTint="#272727" />
        <Button
            android:textSize="18sp"
            android:id="@+id/tvPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".20"
            android:layout_columnWeight=".25"
            android:background="#2B2B2B"
            android:backgroundTint="#2B2B2B"
            android:text="+"
            android:textAllCaps="false"
            android:textColor="#04A3EA"
            app:backgroundTint="#2B2B2B" />


        <Button
            android:textSize="18sp"
            android:id="@+id/tvOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".20"
            android:layout_columnWeight=".25"
            android:background="#2B2B2B"
            android:text="1"
            android:textAllCaps="false"
            android:textColor="#04A3EA"
            app:backgroundTint="#272727" />
        <Button
            android:textSize="18sp"
            android:id="@+id/tvTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".20"
            android:layout_columnWeight=".25"
            android:background="#2B2B2B"
            android:text="2"
            android:textAllCaps="false"
            android:textColor="#04A3EA"
            app:backgroundTint="#272727" />
        <Button
            android:textSize="18sp"
            android:id="@+id/tvThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".20"
            android:layout_columnWeight=".25"
            android:background="#2B2B2B"
            android:text="3"
            android:textAllCaps="false"
            android:textColor="#04A3EA"
            app:backgroundTint="#272727" />
        <Button
            android:layout_rowSpan="2"
            android:textSize="18sp"
            android:id="@+id/tvEquals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".20"
            android:layout_columnWeight=".25"
            android:background="#2B2B2B"
            android:backgroundTint="#2B2B2B"
            android:text="="
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:backgroundTint="#00B1FF" />


        <Button
            android:textSize="18sp"
            android:id="@+id/tvDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".20"
            android:layout_columnWeight=".25"
            android:background="#2B2B2B"
            android:text="."
            android:textAllCaps="false"
            android:textColor="#04A3EA"
            app:backgroundTint="#272727" />
        <Button
            android:layout_columnSpan="2"
            android:textSize="18sp"
            android:id="@+id/tvZero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight=".20"
            android:layout_columnWeight=".25"
            android:background="#2B2B2B"
            android:text="0"
            android:textAllCaps="false"
            android:textColor="#04A3EA"
            app:backgroundTint="#272727" />





    </GridLayout>


</GridLayout>